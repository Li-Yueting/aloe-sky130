#! /usr/bin/env bash
set -euo pipefail
#=========================================================================
# mflowgen-run
#=========================================================================
# Generator : /home/users/xingyuni/ee372/mflowgen_flow/mflowgen/mflowgen/core/build_orchestrator.py

# Pre

rm -f .time_end
date +%Y-%m%d-%H%M-%S > .time_start
MFLOWGEN_STEP_HOME=$PWD
export order=main.tcl,quality-of-life.tcl,floorplan.tcl,add-endcaps-welltaps.tcl,pin-assignments.tcl,reporting.tcl

# Commands

ln -sf inputs/innovus-foundation-flow
rm innovus-foundation-flow/view_definition.tcl
cp cust_view_definition.tcl innovus-foundation-flow/view_definition.tcl
innovus -overwrite -64 -nowin -init START.tcl -log logs/run.log
cd outputs
ln -sf ../checkpoints/design.checkpoint

# Post

cd $MFLOWGEN_STEP_HOME
date +%Y-%m%d-%H%M-%S > .time_end

