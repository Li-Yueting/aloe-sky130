#! /usr/bin/env bash
set -euo pipefail
#=========================================================================
# mflowgen-run
#=========================================================================
# Generator : /home/users/lyt1314/ee372/aloe-sky130/mflowgen/mflowgen/core/build_orchestrator.py

# Pre

rm -f .time_end
date +%Y-%m%d-%H%M-%S > .time_start
MFLOWGEN_STEP_HOME=$PWD
export order=main.tcl

# Commands

ln -sf inputs/innovus-foundation-flow
rm inputs/innovus-foundation-flow/INNOVUS/run_route.tcl
cp cust_run_route.tcl inputs/innovus-foundation-flow/INNOVUS/run_route.tcl
innovus -overwrite -64 -nowin -init START.tcl -log logs/run.log
cd outputs
ln -sf ../checkpoints/design.checkpoint

# Post

cd $MFLOWGEN_STEP_HOME
date +%Y-%m%d-%H%M-%S > .time_end

